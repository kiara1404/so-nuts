<%- include('../partials/head.ejs') %>

<main class="voeding">
    <h2>Voeding</h2>
    <div>
        <article>
            <i class="fa-solid fa-carrot fa-xl"></i>
            <p>Jouw doel is om 200 gram groentes binnen te krijgen per dag.</p>
        </article>
    </div>
    <div class="wrapper">
        <div class="container-s">
            <section>

                <h3>Groente (g)</h3>
            </section>
            <%   if(groenteData) { %>
            <p><span><%= groenteData %></span>/200</p>
            <% } else { %>
            <p><span>0</span>/200</p>
            <% } %>

        </div>

        <div class="container-s">
            <section>
                <h3>Eiwitten (g)</h3>
            </section>
            <%   if(eiwitData) { %>
            <p><span><%= eiwitData %></span>/60</p>
            <% } else { %>
            <p><span>0</span>/60</p>
            <% } %>

        </div>
        <div class="container-s">
            <section>
                <h3>Dagelijkse kcal</h3>
            </section>
                <%   if(kcalData) { %>
                <p><span><%= kcalData %></span>/2000</p>
                <% } else { %>
                <p><span>0</span>/2000</p>
                <% } %>
        </div>
    </div>
    <button class="btn-secondary add-btn">Voeg gegevens toe</button>
    <div class="btn_wrapper">
        <div class="buttons">
            <a href="/form_kcal" id="kcal">CalorieÃ«n</a>
            <a href="/form_eiwitten" id="eiwitten">Eiwitten</a>
            <a href="/form_groente" id="groente">Groente</a>
        </div>
    </div>

    <%- include('../partials/nav.ejs') %>
</main>


