<%- include('../partials/head.ejs') %>
<main class="training">
    <h2>Beweging</h2>
    <div>
        <article>
            <i class="fa solid fa-person-walking fa-xl"></i>
            <p>Jouw doel is om minimaal twee keer per week aan krachttraining te doen.</p>
        </article>
    </div>

    <div class="container">
        <section>
            <h3>Wekelijkse actieve minuten</h3>
        </section>
        <p><span id="totalMin">
                <% var totalMin = data.minTraining %>
                <%= totalMin %>
            </span>/150</p>
    </div>
    <div class="wrapper">

        <div class="container-s">
            <section>
                <h3>Cardio</h3>
            </section>
            <% var totalMin = data.minTraining %>
            <%if(data && data.trainingType == 'cardio') { %>
            <p><span class="cardioValue"><%= data.minTraining %>:00 </span> minuten</p>
            <% } else { %>
            <p><span class="cardioValue">0:00 </span> minuten</p>
            <% } %>
        </div>

        <div class="container-s">
            <section>
                <h3>Kracht</h3>
            </section>
            <%if(data && data.trainingType == 'kracht') { %>
            <p><span class="krachtValue"><%= data.minTraining %>:00 </span> minuten</p>
            <% } else { %>
            <p><span class="krachtValue">0:00 </span> minuten</p>
            <% } %>

        </div>
        <div class="container-s">
            <section>
                <h3>Dagelijkse stappen</h3>
            </section>
            <p><span>4300</span>/10000</p>
        </div>
    </div>
    <a class="btn-secondary" id="add-training-btn" href="/add_training">Voeg gegevens toe</a>

    <%- include('../partials/nav.ejs') %>
</main>


<%- include('../partials/footer.ejs') %>